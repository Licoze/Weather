<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="weatherApp">
    <div class="header">
            <div class="logo">
                @Html.ActionLink("Weather App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="menu">
                <li role="presentation">@Html.ActionLink("Home","Index","Home")</li>
                <li role="presentation">@Html.ActionLink("History", "SearchHistory", "Home")</li>
                <li role="presentation"><a href="@Url.Content("elmah.axd")">Errors</a></li>
            </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="flex-container">
            <div class="footer-element"><p>WeatherApp <br/> &copy; @DateTime.Now.Year</p></div>
            <div class="footer-element">
                
                <p>(011)111-11-11<br/>
                    (011)22-22-33<br/>
                    Pushkina str. Kolotushina app.
                </p>
            </div>  
        </footer>
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.4/js.cookie.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
